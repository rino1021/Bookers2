
<div class ="container">
  <div class ="row">
<div class ="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
  <h2>会員登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :姓 %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name"%>
  </div>

  <div class="field">
    <%= f.label :名%><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name"%>
  </div>

  <div class="field">
    <%= f.label :セイ %><br />
    <%= f.text_field :last_name_kananame, autofocus: true, autocomplete: "last_name_kana"%>
  </div>

  <div class="field">
    <%= f.label :メイ %><br />
    <%= f.text_field :first_name_kana_name, autofocus: true, autocomplete: "first_name_kana_name"%>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode"%>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address"%>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number"%>
  </div>



  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "会員登録", class: "btn btn-success" %>


<% end %>


<p><%= render "devise/shared/links" %></p>
</div>
</div>
</div>
</div>
